    <property name="hbm2ddl.auto">update</property>
      <property name="connection.url">jdbc:mysql://localhost:3306/yinyue</property>
      <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="cn.jdfo.domain.Album"/>
    <mapping resource="cn/jdfo/domain/Album.hbm.xml"/>
    <mapping class="cn.jdfo.domain.AlbumOuterid"/>
      <mapping resource="cn/jdfo/domain/AlbumOuterid.hbm.xml"/>
    <mapping class="cn.jdfo.domain.AlbumSource"/>
      <mapping resource="cn/jdfo/domain/AlbumSource.hbm.xml"/>
    <mapping class="cn.jdfo.domain.LoginLog"/>
      <mapping resource="cn/jdfo/domain/LoginLog.hbm.xml"/>
    <mapping class="cn.jdfo.domain.Singer"/>
      <mapping resource="cn/jdfo/domain/Singer.hbm.xml"/>
    <mapping class="cn.jdfo.domain.Song"/>
      <mapping resource="cn/jdfo/domain/Song.hbm.xml"/>
    <mapping class="cn.jdfo.domain.SongAlbum"/>
      <mapping resource="cn/jdfo/domain/SongAlbum.hbm.xml"/>
    <mapping class="cn.jdfo.domain.SongComment"/>
      <mapping resource="cn/jdfo/domain/SongComment.hbm.xml"/>
    <mapping class="cn.jdfo.domain.SongOuterid"/>
      <mapping resource="cn/jdfo/domain/SongOuterid.hbm.xml"/>
    <mapping class="cn.jdfo.domain.SongSinger"/>
